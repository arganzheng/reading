#** -------------------------------------------
 * 显示select box
 * -------------------------------------------- *#
#macro (select $name $map $selected $hint)

#set ($_map = $map)
#set ($_selected = $selected)
<select name="$name">
  <option value="">$hint</option>

#foreach ($_key in $_map.keySet())
  <option value="$_key" #if ($_key == $_selected) selected #end>$_map.get($_key)</option>
#end

</select>

#end

