#macro (showBookOwnershipStatus $status)
	#if($status == "OnShelf")
		<span class="label label-success">可借阅</span>
	#elseif($status == "OffShelf")
		<span class="label label-warning">下架</span>
	#elseif($status == "Lent")
		<span class="label label-danger">借出</span>
	#elseif($status == "Return")
		<span class="label label-danger">归还</span>
	#else
		<span class="label label-danger">未知状态</span>
	#end
#end

